  <!--用户注册-->
  <insert id="userRegister" parameterType="User">
        INSERT INTO users
        (userPhone,userPassword)
        VALUES
        (#{userphone},#{userpassword})
  </insert>
  <!--查询手机号是否唯一-->
  <select id="findUserByPhone" parameterType="String" resultType="User">
        SELECT * FROM users WHERE userPhone = #{userphone}
  </select>

  <!-- 用户登录 -->
